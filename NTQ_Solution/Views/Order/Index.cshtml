@model PagedList.IPagedList<DataLayer.ViewModel.OrderModel>
@using PagedList.Mvc
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="card shadow mb-4">

                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>UserName</th>
                                    <th>ProductName</th>
                                    <th>Image</th>
                                    <th>Price</th>
                                    <th>Count</th>
                                    <th>Total Money</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count == 0)
                                {
                                    <tr>
                                        <td colspan="9" class="text-center">No data</td>
                                    </tr>
                                }
                                @if (Model.Count != 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        
                                            <tr id="row_@item.ID">
                                                <td>@item.UserName</td>
                                                <td>@item.ProductName</td>
                                                <td>
                                                    <img style="border: 1px solid #ddd; border-radius: 4px; padding: 5px; width: 150px; " src="@item.Image" />
                                                </td>
                                                <td>@item.Price</td>
                                                <td>@item.Count</td>
                                                <td>@(item.Price * item.Count)</td> 
                                                <td>
                                                    @if (item.Status == 1)
                                                    {
                                                        <a class="btn btn-success" style="text-decoration:none" href="/Order/Order?OrderId=@item.ID"><i class="fa fa-edit">Order</i></a>
                                                        <a class="btn btn-danger" style="text-decoration:none" href="/Order/Delete/@item.ID" onclick="return confirm('Do you want to delete?')"><i class="fa fa-trash">Delete</i></a>

                                                    }
                                                    @if (item.Status == 2)
                                                    {
                                                        <a class="btn btn-success" style="text-decoration:none">Wait For Confirmation</a>
                                                        <a class="btn btn-danger" style="text-decoration:none" href="/Order/Delete/@item.ID" onclick="return confirm('Do you want to delete?')"><i class="fa fa-trash">Delete</i></a>

                                                    }
                                                    @if (item.Status == 3)
                                                    {
                                                        <a class="btn btn-success" style="text-decoration:none">Shipping</a>
                                                    }
                                                    @if (item.Status == 4)
                                                    {
                                                        <a class="btn btn-success" style="text-decoration:none">Success</a>
                                                    }

                                                </td>

                                            </tr>
                                        
                                    }
                                }

                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

