@model IEnumerable<DataLayer.ViewModel.OrderModel>
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{


<div class="container mt-4">
    @using (Html.BeginForm("Payment","Order",FormMethod.Post))
    {
        <form class="needs-validation">
            <input type="hidden" name="kh_tendangnhap" value="dnpcuong">
            <input type="text" class="form-control" name="count" id="kh_diachi" value="@item.Count" hidden>
            <input type="text" class="form-control" name="id" id="kh_diachi" value="@item.ID" hidden>
            <input type="text" class="form-control" name="color" id="kh_diachi" value="@item.Color" hidden>
            <input type="text" class="form-control" name="size" id="kh_diachi" value="@item.Size" hidden> 
            <input type="text" class="form-control" name="price" id="kh_diachi" value="@item.Price" hidden> 

            <div class="py-5 text-center">
                <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
                <h2>Thanh toán</h2>
                <p class="lead">Vui lòng kiểm tra thông tin Khách hàng, thông tin Giỏ hàng trước khi Đặt hàng.</p>
            </div>

            <div class="row">
                <div class="col-md-4 order-md-2 mb-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Đơn hàng</span>
                        <span class="badge badge-secondary badge-pill">1</span>
                    </h4>
                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div class="my-0">
                                <p>Tên sản phẩm</p>
                                <p><small class="text-muted">Màu sắc</small></p>
                                <p><small class="text-muted">Size</small></p>
                                <p><small class="text-muted">Đơn giá</small></p>
                                <p><small class="text-muted">Số lượng</small></p>
                            </div>
                            <div class="my-0" style="text-align: right">
                                <p>@item.ProductName</p>
                                <p><small class="text-muted">@item.Color</small></p>
                                <p><small class="text-muted">@item.Size</small></p>
                                <p><small class="text-muted">@item.Price</small></p>
                                <p><small class="text-muted">@item.Count</small></p>
                            </div>


                        </li>

                        <li class="list-group-item d-flex justify-content-between">
                            <span>Tổng tiền</span>
                            <strong>@(item.Price*item.Count)</strong>
                        </li>
                    </ul>

                </div>
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Thông tin khách hàng</h4>

                    <div class="row">
                        <div class="col-md-12">
                            <label for="kh_ten">Họ tên</label>
                            <input type="text" class="form-control" name="kh_ten" id="kh_ten"
                                   value="@item.UserName" readonly="">
                        </div>
                        <div class="col-md-12">
                            <label for="kh_diachi">Địa chỉ</label>
                            <input type="text" class="form-control" name="address" id="kh_diachi"
                                   value="@item.Address">
                        </div>
                        <div class="col-md-12">
                            <label for="kh_dienthoai">Điện thoại</label>
                            <input type="text" class="form-control" name="phone" id="kh_dienthoai"
                                   value="@item.Phone">
                        </div>
                        <div class="col-md-12">
                            <label for="kh_email">Email</label>
                            <input type="text" class="form-control" name="kh_email" id="kh_email"
                                   value="@item.Email" readonly="">
                        </div>
                    </div>

                    <h4 class="mb-3">Hình thức thanh toán</h4>

                    <div class="d-block my-3">
                        <div class="custom-control custom-radio">
                            <input id="1" name="payment" type="radio" class="custom-control-input" required=""
                                   value="1">
                            <label class="custom-control-label" for="1">Tiền mặt</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="2" name="payment" type="radio" class="custom-control-input" required=""
                                   value="2">
                            <label class="custom-control-label" for="2">Chuyển khoản</label>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <h4 class="mb-3">Hình thức vận chuyển</h4>

                    <div class="d-block my-3">
                        <div class="custom-control custom-radio">
                            <input id="ship1" name="ship" type="radio" class="custom-control-input" required=""
                                   value="1">
                            <label class="custom-control-label" for="ship1">Giao hàng tiết kiệm(20000)</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="ship2" name="ship" type="radio" class="custom-control-input" required=""
                                   value="2">
                            <label class="custom-control-label" for="ship2">Giao hàng hỏa tốc(25000)</label>
                        </div>
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit" name="btnDatHang">
                        Đặt hàng
                    </button>
                </div>
            </div>
        </form>
    }

</div>
