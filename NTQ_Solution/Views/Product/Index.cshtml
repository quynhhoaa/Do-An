@model PagedList.IPagedList<DataLayer.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
    {

        <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
            
            <div class="input-group" style="margin-top:20px;margin-bottom:20px">

                <input type="text" value="@ViewBag.SearchString" class="form-control bg-light border-0 small" placeholder="search" name="searchString"
                       aria-label="Search" aria-describedby="basic-addon2" style="margin-right:5px">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>

                </div>
            </div>

        </form>
    }
    <div class="section group">
        @foreach (var item in Model)
        {
            /* if (item.Status == 1)
             {*/
            var url = "/chi-tiet/" + item.Slug + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4" style="height: 380px;max-height: 400px;">
                <a href="@url"><img src="@item.Image" alt="@item" style="width:193px;height:193px" /></a>
                <h2 style="height:50px;padding-top:10px">@item.ProductName </h2>
                <i class="fa fa-eye " id="eye">@item.NumberViews</i>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(item.Price.HasValue?item.Price.Value.ToString("N0"):"Connect with shop")đ</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="@url">Thêm vào giỏ hàng</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
            @*}*@
        }
    </div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.SearchString }))
</div>
